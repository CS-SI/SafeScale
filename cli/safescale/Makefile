include ../../common.mk

ifeq ($(OS),Windows_NT)
	EXEC:=safescale.exe
	EXEC-COVER:=safescale-cover.exe
else
	EXEC:=safescale
	EXEC-COVER:=safescale-cover
endif

BUILD_DATE := `date +%Y/%m/%d-%H:%M`
VERSIONFILE := version.go
REV := `git rev-parse HEAD 2>/dev/null || echo ""`

.PHONY:	vet clean

default: all

vet:
	@$(GO) vet $(BUILD_TAGS) ./...

all: clean gensrc
	@CGO_ENABLED=0 $(GO) build $(RACE_CHECK) -o $(EXEC) $(BUILD_TAGS)
	@if [ -z "$(GOOS)" ]; then $(GO) test -o $(EXEC-COVER) $(BUILD_TAGS) -covermode=count -coverpkg=github.com/CS-SI/SafeScale/... >/dev/null 2>&1; fi;

clean:
	@$(RM) $(EXEC-COVER) || true
	@$(RM) $(EXEC) || true

generate: gensrc

gensrc:
	@$(RM) $(VERSIONFILE) || true
	@echo "package main" > $(VERSIONFILE)
	@echo "// Build constants (autogenerated)" >> $(VERSIONFILE)
	@echo "const (" >> $(VERSIONFILE)
	@echo "    Version = \"$(VERSION)\"" >> $(VERSIONFILE)
	@echo "    BuildDate = \"$(BUILD_DATE)\"" >> $(VERSIONFILE)
	@echo "    Revision = \"$(REV)\"" >> $(VERSIONFILE)
	@echo ")" >> $(VERSIONFILE)
